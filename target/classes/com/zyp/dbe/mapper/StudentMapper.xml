<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zyp.dbe.mapper.StudentMapper">

    <select id="getStudentList" resultType="com.zyp.dbe.pojo.Student">
        select * from databaseex.student
    </select>

    <select id="getStudentBySno" resultType="com.zyp.dbe.pojo.Student" parameterType="String">
        select * from databaseex.student where Sno = #{Sno}
    </select>

    <select id="getStudentBySdept" resultType="com.zyp.dbe.pojo.Student" parameterType="String">
        select * from databaseex.student where Sdept = #{Sdept}
    </select>

    <insert id="addStudent" parameterType="com.zyp.dbe.pojo.Student">
        insert into databaseex.student (Sno,Sname,Ssex,Sage,Sdept,Sscholarship) values (#{Sno},#{Sname},#{Ssex},#{Sage},#{Sdept},#{Sscholarship})
    </insert>

    <update id="updateStudent" parameterType="com.zyp.dbe.pojo.Student">
        update databaseex.student set Sname = #{Sname}, Ssex = #{Ssex}, Sage = #{Sage}, Sdept = #{Sdept}, Sscholarship = #{Sscholarship} where Sno = #{Sno}
    </update>

    <delete id="deleteStudent" parameterType="String">
        delete from databaseex.student where Sno = #{Sno}
    </delete>

</mapper>